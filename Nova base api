import discord
import os
from dotenv import load_dotenv

# Load .env file containing your Discord bot token
load_dotenv()

# Setup bot "intents" (this controls what the bot is allowed to read)
intents = discord.Intents.default()
intents.message_content = True  # Needed to read message text
intents.messages = True

# Create the bot client
client = discord.Client(intents=intents)

# When Nova logs in
@client.event
async def on_ready():
    print(f"ðŸš€ Nova is online as {client.user}!")

# When a message is received
@client.event
async def on_message(message):
    if message.author == client.user:
        return  # Ignore Nova's own messages

    msg = message.content.lower()

    # Greeting
    if msg == "hello" or msg == "hi nova":
        await message.channel.send(f"Hey {message.author.name}! ðŸ‘‹ I'm Nova, your AI assistant. What can I help you with today?")

    # Example task request
    elif msg.startswith("remind me to"):
        task = msg.replace("remind me to", "").strip()
        await message.channel.send(f"Got it! âœ… Iâ€™ll remind you to: **{task}** (reminders coming soon ðŸ˜…)")

    # Help command
    elif msg == "nova help":
        await message.channel.send(
            "**Nova Commands:**\n"
            "- `hello` â†’ greet Nova\n"
            "- `remind me to [task]` â†’ (placeholder for future reminders)\n"
            "- `nova help` â†’ show this list"
        )

# Run the bot using the token from your .env file
client.run(os.getenv("DISCORD_BOT_TOKEN"))
